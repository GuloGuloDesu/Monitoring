" Turn on Line Number. Turn it off with "set nonumber"
set number

" Turn on syntax colors
syntax on

" Change tabs to 4 spaces
set expandtab
set tabstop=4

" Indent automatically depending on filetype
filetype indent on
set autoindent

" Backspace works normally
set backspace=indent,eol,start

" Turn on column numbers
set ruler

" Show incomplete commands
set showcmd

" Enable 256 colrs
set t_Co=256

" Change color scheme
colorscheme darkblue
